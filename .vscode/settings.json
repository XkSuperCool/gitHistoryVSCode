// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "node_modules": false,
        ".vscode-test": true,
        "coverage": true,
        "out": true,
        "dist": true
    },
    "search.exclude": {
        "out": true,
        "dist": true,
        "coverage": true,
        "node_modules": true,
        ".vscode-test": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
}
